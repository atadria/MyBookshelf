<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="750.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ScreenAdd" >


    <Button accessibleHelp="Go to previous page" mnemonicParsing="false" onAction="#onActionBack" prefHeight="20.0" prefWidth="200.0" text="BACK" GridPane.columnIndex="3" GridPane.rowIndex="11">
        <padding>
            <Insets bottom="2.0" left="2.0" right="20.0" top="2.0" />
        </padding>
    </Button>
    <Button accessibleHelp="Add book" mnemonicParsing="false" onAction="#onActionAdd" prefHeight="20.0" prefWidth="200.0" text="ADD" GridPane.columnIndex="3" GridPane.rowIndex="10">
        <padding>
            <Insets bottom="2.0" left="2.0" right="20.0" top="2.0" />
        </padding>
    </Button>

    <!--<Label GridPane.rowIndex="7" />-->
    <Label text="Publisher" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Author" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Subtitle" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Publish date" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Title" GridPane.columnIndex="1" />
    <Label text="ISBN" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <TextField fx:id="title" GridPane.columnIndex="3" />
    <TextField fx:id="subtitle" GridPane.columnIndex="3" GridPane.rowIndex="1">

    </TextField>
    <TextField fx:id="author" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <TextField fx:id="publisher" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <TextField fx:id="isbn" GridPane.columnIndex="3" GridPane.rowIndex="5" />
    <TextArea fx:id="info" prefHeight="50.0" prefWidth="300.0" GridPane.columnIndex="3" GridPane.rowIndex="7" />
    <Label text="Additional info" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <TextField fx:id="date" GridPane.columnIndex="3" GridPane.rowIndex="4" />

</GridPane>
